<%= form_for @changeset, Routes.user_path(@conn, :create), [class: "user-create"], fn f -> %>
  <label>
    Name: <%= text_input f, :name %>
  </label>

  <label>
    Email: <%= text_input f, :email %>
  </label>

  <label>
    Password: <%= password_input f, :password %>
  </label>

  <%= submit "Submit" %>
<% end %>
