<%= form_for @changeset, Routes.user_path(@conn, :create), [class: "user-form"], fn f -> %>
  <label>
    <%= text_input f, :name, placeholder: "Nome" %>
  </label>

  <label>
    <%= text_input f, :email, placeholder: "Email" %>
  </label>

  <label>
    <%= password_input f, :password, placeholder: "Senha" %>
  </label>

  <%= submit "Criar" %>
<% end %>
